<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:textColor="@color/red"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_below="@+id/btnnghe_word" >

    </ListView>

    <TextView
        android:id="@+id/txtphienam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnnghe_word"
        android:layout_toLeftOf="@+id/btnnghe_word"
        android:text="TextView"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btnnghe_word"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/txtword"
        android:layout_alignRight="@+id/lv1"
        android:background="@drawable/nghe1"/>

</RelativeLayout>

</LinearLayout>
